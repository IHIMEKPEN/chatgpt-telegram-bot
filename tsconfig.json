{
  "compilerOptions": {
    "target": "esnext",
    /* Modules */
    "module": "commonjs",

    "moduleResolution": "node",
    "rootDir": "./src",
    "baseUrl": ".",
    // "paths": {
    //   "@app/*": ["./src/*"]
    // },

    /* JavaScript Support */
    "allowJs": true,
    /* Json Support */
    "resolveJsonModule": true,

    /* Emit */
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*", "**/*.spect.ts", "**/*.test.ts"],
  "assets": ["**/*.html"]
  
}
